{
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "bracketSpacing": true,
        "explicitTypes": "always",
        "newline-before-return": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-var-keyword": true,
        "printWidth": 80,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    }
  ]
}
